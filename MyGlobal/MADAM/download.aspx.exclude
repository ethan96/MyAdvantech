                .AppendLine(String.Format(" <a href='http://my-global.advantech.eu/MADAM/DlOPC.ashx?ROWID={0}'>http://my-global.advantech.eu/MADAM/DlOPC.ashx?ROWID={0}</a><br />", rid).ToLower)
