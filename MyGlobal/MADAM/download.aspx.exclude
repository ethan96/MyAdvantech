                LitTis1.Text = "下载地址将马上发送至您邮箱，您也可以"
                LitTis2.Text = "下载。"
                hyDl.Text = "点击此处"
            ElseIf lan = "zh-tw" Then
             
            Else
              
            End If
            hyDl.NavigateUrl = String.Format("http://my-global.advantech.eu/MADAM/DlOPC.ashx?ROWID={0}", rid)
        End If
